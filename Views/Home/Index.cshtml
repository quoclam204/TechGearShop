@model IEnumerable<EcommerceMVC.ViewModels.HangHoaVM>
@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link href="~/css/product-card.css" rel="stylesheet" />
}

<!-- Carousel Banner Start -->
<div class="container-fluid px-0">
    <div id="carouselId" class="carousel slide hero-carousel" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselId" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselId" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselId" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img src="~/Hinh/HangHoa/home2.jpg" class="d-block w-100 carousel-banner-img" alt="First slide">
            </div>
            <div class="carousel-item">
                <img src="~/Hinh/HangHoa/home8.jpg" class="d-block w-100 carousel-banner-img" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img src="~/Hinh/HangHoa/home5.jpg" class="d-block w-100 carousel-banner-img" alt="Third slide">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselId" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselId" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!-- Carousel Banner End -->

<!-- Featured Products Section Start-->
<div class="container-fluid py-4">
    <div class="container">
        <!-- Section Header -->
        <div class="row mb-3 align-items-center">
            <div class="col-md-6">
                <h2 class="fw-bold mb-0">Sản phẩm nổi bật</h2>
            </div>
            <div class="col-md-6 text-end">
                <div class="dropdown d-inline-block">
                    <button class="btn btn-outline-primary rounded-pill px-4 dropdown-toggle" 
                            type="button" 
                            id="filterDropdown" 
                            data-bs-toggle="dropdown" 
                            aria-expanded="false">
                        <i class="fas fa-filter me-2"></i>Lọc theo loại
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="filterDropdown">
                        <li>
                            <a class="dropdown-item filter-link" href="javascript:void(0)" data-loai="">
                                <i class="fas fa-th me-2"></i>Tất cả sản phẩm
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        @await Component.InvokeAsync("MenuLoai")
                    </ul>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="product-grid" id="productGrid">
            @await Html.PartialAsync("_ProductGrid", Model)
        </div>

        <!-- Loading Spinner -->
        <div id="loadingSpinner" class="text-center py-5" style="display: none;">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Đang tải...</span>
            </div>
        </div>
    </div>
</div>
<!-- Featured Products Section End-->

@section Scripts {
    <script>
        $(document).ready(function () {
            // Xử lý click vào menu lọc
            $('.filter-link').on('click', function (e) {
                e.preventDefault();
                
                var loai = $(this).data('loai');
                
                // Hiển thị loading
                $('#productGrid').hide();
                $('#loadingSpinner').show();
                
                // Gọi AJAX
                $.ajax({
                    url: '@Url.Action("FilterProducts", "Home")',
                    type: 'GET',
                    data: { loai: loai },
                    success: function (result) {
                        $('#productGrid').html(result);
                        $('#productGrid').show();
                        $('#loadingSpinner').hide();
                    },
                    error: function () {
                        alert('Có lỗi xảy ra khi tải sản phẩm!');
                        $('#productGrid').show();
                        $('#loadingSpinner').hide();
                    }
                });
            });
        });
    </script>
}