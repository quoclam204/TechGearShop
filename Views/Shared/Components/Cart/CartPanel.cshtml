@model EcommerceMVC.ViewModels.CartModel

<a asp-controller="Cart" asp-action="Index" class="position-relative me-4 my-auto navbar-icon-link">
	<i class="fa fa-shopping-bag fa-2x text-primary"></i>
	<span class="position-absolute cart-badge rounded-circle d-flex align-items-center justify-content-center text-white px-1" style="top: -5px; left: 15px; height: 22px; min-width: 22px; background: linear-gradient(135deg, #ff416c, #ff4b2b); box-shadow: 0 2px 8px rgba(255, 65, 108, 0.4); font-weight: bold; font-size: 12px;">@Model.Quantity</span>
</a>	

	