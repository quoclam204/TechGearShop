@model IEnumerable<EcommerceMVC.ViewModels.MenuLoaiVM>

@foreach (var item in Model)
{
    <li>
        <a class="dropdown-item" asp-controller="HangHoa" asp-action="Index" asp-route-loai="@item.MaLoai">
            <i class="fas fa-tag me-2"></i>@item.TenLoai
            <span class="badge bg-secondary ms-2">@item.SoLuong</span>
        </a>
    </li>
}